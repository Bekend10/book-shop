@model book_shop.Models.Payment
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh toán thất bại - VNPAY</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .failure-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 40px;
            max-width: 500px;
            width: 100%;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .failure-container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, #ff6b6b, #ee5a52, #ff5722, #f44336);
            }

        .failure-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: shakeError 0.8s ease-out;
        }

            .failure-icon svg {
                width: 40px;
                height: 40px;
                fill: white;
            }

        @@keyframes shakeError {
            0%, 100% {
                transform: translateX(0);
            }

            10%, 30%, 50%, 70%, 90% {
                transform: translateX(-5px);
            }

            20%, 40%, 60%, 80% {
                transform: translateX(5px);
            }
        }

        .vnpay-logo {
            width: 120px;
            height: 40px;
            margin: 0 auto 30px;
            background: #1976d2;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 18px;
        }

        h1 {
            color: #2c3e50;
            font-size: 28px;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .subtitle {
            color: #7f8c8d;
            font-size: 16px;
            margin-bottom: 30px;
            line-height: 1.5;
        }

        .error-details {
            background: #fff5f5;
            border: 1px solid #fed7d7;
            border-radius: 12px;
            padding: 25px;
            margin: 30px 0;
            text-align: left;
        }

        .error-code {
            background: #ff6b6b;
            color: white;
            padding: 8px 16px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 15px;
        }

        .error-message {
            color: #e53e3e;
            font-weight: 500;
            margin-bottom: 20px;
            font-size: 16px;
        }

        .transaction-details {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 25px;
            margin: 30px 0;
            text-align: left;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #e9ecef;
        }

            .detail-row:last-child {
                border-bottom: none;
            }

        .detail-label {
            color: #6c757d;
            font-weight: 500;
        }

        .detail-value {
            color: #2c3e50;
            font-weight: 600;
        }

        .amount {
            color: #dc3545;
            font-size: 18px;
            font-weight: 700;
        }

        .status-badge {
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 20px;
        }

        .possible-causes {
            background: #fff8e1;
            border: 1px solid #ffcc02;
            border-radius: 12px;
            padding: 20px;
            margin: 20px 0;
            text-align: left;
        }

        .causes-title {
            color: #f57c00;
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

            .causes-title svg {
                width: 20px;
                height: 20px;
                margin-right: 8px;
                fill: #f57c00;
            }

        .causes-list {
            list-style: none;
            padding: 0;
        }

            .causes-list li {
                color: #6c757d;
                margin-bottom: 10px;
                padding-left: 20px;
                position: relative;
            }

                .causes-list li::before {
                    content: '•';
                    color: #f57c00;
                    position: absolute;
                    left: 0;
                }

        .buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn {
            flex: 1;
            padding: 15px 25px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(76, 175, 80, 0.3);
            }

        .btn-secondary {
            background: white;
            color: #6c757d;
            border: 2px solid #e9ecef;
        }

            .btn-secondary:hover {
                background: #f8f9fa;
                border-color: #dee2e6;
            }

        .btn-danger {
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
            color: white;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(255, 107, 107, 0.3);
            }

        .footer-note {
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
            color: #6c757d;
            font-size: 14px;
        }

        .contact-info {
            background: #e8f5e8;
            border: 1px solid #4CAF50;
            border-radius: 10px;
            padding: 15px;
            margin-top: 20px;
        }

            .contact-info strong {
                color: #2e7d32;
            }

        @@media (max-width: 600px) {
            .failure-container {
                padding: 30px 20px;
                margin: 10px;
            }

            .buttons {
                flex-direction: column;
            }

            h1 {
                font-size: 24px;
            }
        }

        .pulse-ring {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100px;
            height: 100px;
            border: 3px solid #ff6b6b;
            border-radius: 50%;
            animation: pulse-ring 2s infinite;
            opacity: 0.6;
        }

        @@keyframes pulse-ring {
            0% {
                transform: translate(-50%, -50%) scale(0.8);
                opacity: 1;
            }

            100% {
                transform: translate(-50%, -50%) scale(1.2);
                opacity: 0;
            }
        }
    </style>
</head>
<body>
    <div class="failure-container">
        <div class="vnpay-logo">VNPAY</div>

        <div class="failure-icon">
            <div class="pulse-ring"></div>
            <svg viewBox="0 0 24 24">
                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
            </svg>
        </div>

        <div class="status-badge">Thanh toán thất bại</div>

        <h1>Giao dịch không thành công</h1>
        <p class="subtitle">Đừng lo lắng! Hãy thử lại hoặc liên hệ với chúng tôi để được hỗ trợ</p>

        <div class="error-details">
            <div class="error-code">Mã lỗi: ERROR_001</div>
            <div class="error-message">
                Không đủ số dư tài khoản hoặc thẻ đã hết hạn
            </div>
        </div>

        <div class="transaction-details">
            <div class="detail-row">
                <span class="detail-label">Mã giao dịch:</span>
                <span class="detail-value">#VNP_@Model.payment_id</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Thời gian:</span>
                <span class="detail-value">@Model.payment_date.ToString("dd/MM/yyyy HH:mm:ss")</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Phương thức:</span>
                <span class="detail-value">Thẻ ATM</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Ngân hàng:</span>
                <span class="detail-value">NCB</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Số tiền:</span>
                <span class="detail-value amount">@($"{Model.amount:N0} VNĐ")</span>
            </div>
        </div>

        <div class="possible-causes">
            <div class="causes-title">
                <svg viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z" />
                </svg>
                Nguyên nhân có thể:
            </div>
            <ul class="causes-list">
                <li>Số dư tài khoản không đủ</li>
                <li>Thẻ đã hết hạn hoặc bị khóa</li>
                <li>Sai mã PIN hoặc OTP</li>
                <li>Kết nối mạng không ổn định</li>
                <li>Vượt quá hạn mức giao dịch</li>
            </ul>
        </div>

        <div class="buttons">
            <button class="btn btn-primary" onclick="retryPayment()">
                Thử lại
            </button>
            <button class="btn btn-secondary" onclick="goBack()">
                Quay lại
            </button>
        </div>

        <div class="contact-info">
            <strong>Cần hỗ trợ?</strong><br>
            Hotline: <strong>0859 293 744</strong> (24/7)<br>
            Email: support@vnpay.vn
        </div>

        <div class="footer-note">
            <p>Không có khoản phí nào được trừ từ tài khoản của bạn</p>
            <p>Giao dịch sẽ tự động hủy sau 15 phút</p>
        </div>
    </div>

    <script>
        function retryPayment() {
            alert('Chuyển hướng để thử lại thanh toán...');
            // window.location.href = '/payment';
        }

        function goBack() {
            window.location.href = 'http://localhost:3000/';
        }

        // Add click effect to failure icon
        document.querySelector('.failure-icon').addEventListener('click', function () {
            this.style.animation = 'shakeError 0.8s ease-out';
            setTimeout(() => {
                this.style.animation = '';
            }, 800);
        });

    </script>
</body>
</html>